<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="#540DD3" />
            <gradient android:angle="-90" android:startColor="#B28EF1" android:endColor="#631BE4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />

            <solid android:color="#5A0FE0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />

            <gradient android:angle="45" android:startColor="#AC83F5" android:endColor="#631BE4" />
        </shape>
    </item>
</selector>